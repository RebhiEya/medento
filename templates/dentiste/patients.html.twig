{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/dash_dentist.css') }}">
    <link rel="stylesheet" href="{{ asset('css/dentiste_patients.css') }}">

{% endblock %}

{% block title %}Patients{% endblock %}

{% block body %}

<div class="dashboard-container">

    <!-- SIDEBAR (même que dashboard) -->
    <aside class="sidebar">
        <div class="profile">
            <img src="{{ asset('images/docteur.png') }}" alt="docteur">
            <h3>Docteur. {{ app.user.prenom }}</h3>
            <p>{{ app.user.email }}</p>
        </div>

        <ul class="menu">
            <li><a href="{{ path('dentiste_dashboard') }}">Dashboard</a></li>
            <li class="active"><a href="{{ path('dentiste_patients') }}">Patients</a></li>
            <li><a href="{{ path('dentiste_rendezvous') }}">Rendez-vous</a></li>
            <li><a href="{{ path('dentiste_service') }}">Service</a></li>
            <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
        </ul>
    </aside>

    <!-- CONTENT -->
    <main class="content">

        <h1>Liste des Patients</h1>

        <table class="patients-table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                </tr>
            </thead>

            <tbody>
                {% for p in patients %}
                    <tr>
                        <td>{{ p.nom }} {{ p.prenom }}</td>
                        <td>{{ p.email }}</td>
                        <td>{{ p.tel }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </main>

</div>

{% endblock %}
