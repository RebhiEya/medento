{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/dash_pation.css') }}">
    <link rel="stylesheet" href="{{ asset('css/services.css') }}">
{% endblock %}

{% block body %}

<div class="dashboard-layout">

    <!-- SIDEBAR (mÃªme que dashboard) -->
    <aside class="sidebar">
        <div class="user-box">
            <div class="avatar">ðŸ‘¤</div>
            <h3>{{ app.user.prenom }} {{ app.user.nom }}</h3>
            <span class="role">Patient</span>
        </div>

        <nav class="menu">
            <a href="{{ path('patient_dashboard') }}">Dashboard</a>
            <a href="{{ path('patient_rendezvous_new') }}">Ajouter un rendez-vous</a>
            <a href="{{ path('patient_services') }}" class="active">Services</a>
            <a href="{{ path('app_logout') }}" class="logout">DÃ©connexion</a>
        </nav>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">

        <h1 class="services-title"> Nos services dentaires</h1>

        <div class="services-grid">
            {% for service in services %}
                <div class="service-card">

                    <div class="service-image">
                        {% if service.image %}
                            <img src="{{ asset('uploads/services/' ~ service.image) }}" alt="{{ service.nom }}">
                        {% else %}
                            <img src="{{ asset('images/default-service.png') }}" alt="Service">
                        {% endif %}
                    </div>

                    <div class="service-content">
                        <h3>{{ service.nom }}</h3>
                        <p>{{ service.description }}</p>

                        <div class="service-price">
                            {{ service.prix }} DT
                        </div>

                        <a href="{{ path('patient_rendezvous_new') }}" class="service-btn">
                            Prendre rendez-vous
                        </a>
                    </div>

                </div>
            {% endfor %}
        </div>

    </main>

</div>

{% endblock %}
