{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style-login.css') }}">
{% endblock %}

{% block body %}

    <div class="login-container">
        <div class="login-box">

            <!-- LEFT SIDE -->
            <div class="login-left">
                <h1>Login</h1>
                <p>Welcome to log in to your background management system.</p>

                {# --- FORMULAIRE SYMFONY --- #}
                <form method="post">

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <label for="inputEmail">Email</label>
                    <input type="email"
                           id="inputEmail"
                           name="email"
                           value="{{ last_username }}"
                           required
                           autofocus
                           placeholder="example@mail.com">

                    <label for="inputPassword">Password</label>
                    <input type="password"
                           id="inputPassword"
                           name="password"
                           required
                           placeholder="Please enter your password">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="checkbox">
                        <input type="checkbox" id="remember" name="_remember_me">
                        <label for="remember">Remember me</label>
                    </div>




                    <button type="submit" class="login-btn">LOGIN</button>
                </form>

                {# üîπ LIEN "Cr√©er un compte" -> plac√© juste ici #}
                <div class="register-link">
                    <p>Vous n'avez pas de compte ?
                        <a href="{{ path('app_register') }}">Cr√©er un compte</a>
                    </p>
                </div>

            </div>

            <!-- RIGHT SIDE -->
            <div class="login-right">
                <img src="{{ asset('images/login-illustration.jpg') }}" alt="illustration">
            </div>

        </div>
    </div>

{% endblock %}

